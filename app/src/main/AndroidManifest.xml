<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pimedlife.pimedlife">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PIMEDLIFE">
        <activity android:name=".screen.search.Searchctivity"></activity>
        <activity android:name=".screen.home.HomeActivity" />
        <activity android:name=".screen.login.LoginActivity" />
        <activity
            android:name=".screen.IntroActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".screen.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screen.registration.RegistrationActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>